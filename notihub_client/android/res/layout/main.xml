<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/st_rl_main"
  android:layout_height="fill_parent"
  android:background="#ff8ca3e4"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content">
  <TextView
    android:id="@+id/st_tv_welcome"
    android:layout_width="fill_parent"
    android:layout_height="20dip"
    android:visibility="invisible"
    android:text="TextView"
    android:textColor="#ffb7c6ee"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true">
  </TextView>

  <FrameLayout
    android:id="@+id/st_fl_search"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/st_tv_welcome">
    <EditText
      android:id="@+id/st_et_search"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"/>
    <Button
      android:id="@+id/st_bn_search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:background="@drawable/ic_search"/>
  </FrameLayout>

</RelativeLayout>
